<Configuration status = "warn">

	<Appenders>
		<RollingFile name= "RollingFile" filename= "C:/SeleniumPOMSession/SeleniumPOM.log"
			filePattern= "C:/SeleniumPOMSession/SeleniumPOM-%d-%i.log.gz">
		 <PatternLayout pattern= "%d %t %-5p %c - %m%n"/>
		 <Policies>
		 	<SizeBasedTriggeringPolicy size= "2KB"/>
		 	<TimeBasedTriggeringPolicy interval= "1" modulate= "true"/>	
		 </Policies>
		 	<DefaultRolloverStrategy max = "5"/>
	</RollingFile>
	</Appenders>

	<Loggers>
		<Root level = "debug">
		<AppenderRef ref = "RollingFile"/>
		</Root>
		
		<Logger name= "com.qa.selenium" level= "debug" additivity= "false">
		<AppenderRef ref = "RollingFile"/>
		</Logger>
		
	</Loggers>
</Configuration>